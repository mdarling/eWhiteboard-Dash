<h1>Listing nurses</h1>

<table>
  <tr>
    <th>First name</th>
    <th>Last name</th>
    <th></th>

  </tr>

<% @nurses.each do |nurse| %>
  <tr>
    <td><%= nurse.first_name %></td>
    <td><%= nurse.last_name %></td>
    <td><%= button_to 'Edit' , edit_nurse_path(nurse), :method => "get" %></td>
  </tr>
<% end %>
</table>

<br />
<%= button_to 'New Nurse', new_nurse_path, :method => "get" %>
<br />
<%= button_to 'Back to Whiteboard', "/whiteboard/index", :method => "get" %> 
